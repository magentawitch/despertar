script/source = "extends Position2D

signal presiono_continuar

func mostrar_carta(nombre_carta: String):
	var carta = cargar_carta(nombre_carta)
	$contenido.add_child(carta)
	visible = true

func _on_boton_para_cerrar_pressed() -> void:
	emit_signal(\"presiono_continuar\")
	visible = false
	for c in $contenido.get_children():
		c.queue_free()

func cargar_carta(nombre_carta: String):
	var archivo_de_la_escena = \"res://cartas/%s.tscn\" % nombre_carta
	assert(
		ResourceLoader.exists(archivo_de_la_escena),
		\"No existe la carta: %s, deberia estar en: %s\" % [
			nombre_carta, archivo_de_la_escena
		]
	)
	return load(archivo_de_la_escena).instance()
"

