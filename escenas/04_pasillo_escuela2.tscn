script/source = "extends Escena

func _ready():
	pass

func _on_PuertaAula_pressed():
	dice(\"Jade\", \"Ya terminé el examen. Quiero explorar el pasillo antes de volver\")


func _on_PuertaPatio_pressed():
	dice(\"Jade\", \"Mm, la puerta del patio parece estar cerrada por ahora\")

func _on_PuertaMuseoAnalogico_pressed():
	dice(\"Jade\", \"Mm, esta puerta parece estar cerrada por ahora\")

var clicks_cuadro_volk = 0

func _on_CuadroVolk_pressed():
	clicks_cuadro_volk += 1
	if clicks_cuadro_volk == 1:
		dice_a_la_grabadora(\"\"\"Bitácora número 42: En el pasillo tenemos un cuadro 
		de Volk, principal exponente del movimiento transhumanista. Cuando el 
		movimiento transhumanista recién estaba iniciando, Volk procramabla que
		con los implantes todos podríamos alcanzar la mejor versión de nosotres
		mismes.\"\"\")
	if clicks_cuadro_volk >= 2:
		dice_a_la_grabadora(\"\"\" Volk aseguraba que cuando ascendiera al poder, 
		no habría diferencias entre nosotres, todes seríamos iguales: no habría 
		personas ricas, pobres, ni en cargos de poder. Una sociedad horizontal, 
		clamaba. \"\"\")


func _on_BustVolk_pressed():
	dice_a_la_grabadora(\"\"\" Bitácora número 316: Un mes después de que Volk 
	ascendiera al poder, exigió que todos los ámbitos educativos, religiosos y 
	comerciales exhibieran al menos un cuadro o escultura suya. 
	Varias instituciones fueron clausuradas por no hacerlo. \"\"\")

"

